pipeline {
  agent any
  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }
    stage('Build') {
      steps {
        echo 'Building..'
        sh 'cd docker-terraform-aws-training/superherosfightingapp && make install'
        sh 'cd docker-terraform-aws-training/superherosfightingapp && make build'
      }
    }
    stage('Test') {
      steps {
        echo 'Testing..'
      }
    }
    stage('Running') {
      steps {
        echo 'Deploying....'
        sh 'cd docker-terraform-aws-training/superherosfightingapp && make run'
      }
    }
    
  }
}
